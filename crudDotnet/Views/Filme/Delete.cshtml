@model crudDotnet.Models.Filme

@{
    ViewData["Title"] = "Delete";
}

<h3>Tem certeza que deseja apagar este registro?</h3>
<h3>Não será possível desfazer esta ação!</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FilmeNome)
        </dd>
        <dt class = "col-sm-2">
            Sinopse
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FilmeSinopse)
        </dd>
        <dt class = "col-sm-2">
            Ano
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FilmeAnoLancamento)
        </dd>
        <dt class = "col-sm-2">
            Avaliação
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FilmeImdb)
        </dd>
        <dt class = "col-sm-2">
            Capa
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.FilmeUrlImg)" width="240" height="320">
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FilmeId" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>
